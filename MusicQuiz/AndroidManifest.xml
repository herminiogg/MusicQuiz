<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ia.musicquiz"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ia.musicquiz.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.ia.musicquiz.BootActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ia.musicquiz.MenuPrincipalActivity"
            android:label="@string/title_activity_menu_principal"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.ia.musicquiz.PreguntaSingleActivity"
            android:label="@string/title_activity_pregunta_single"
            android:screenOrientation="landscape" >
        </activity>
        <!--<activity android:name="com.ia.musicquiz.EleccionJugadoresActivity"></activity>-->
        <activity android:name="GenreListActivity"></activity>
    </application>

</manifest>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android1:id="@+id/textElegir"
        android1:layout_width="wrap_content"
        android1:layout_height="50dp"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentRight="true"
        android1:layout_alignParentTop="true"
        android1:background="#2175bc"
        android1:gravity="center_vertical"
        android1:text="@string/elegir_genero"
        android1:textAppearance="?android:attr/textAppearanceLarge"
        android1:textColor="#FFFFFF" />

    <ListView
        android1:id="@android:id/list"
        android1:layout_width="match_parent"
        android1:layout_height="match_parent"
        android1:layout_alignParentLeft="true"
        android1:layout_below="@+id/textElegir" >

    </ListView>
    
</RelativeLayout>